{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TS with TSGo",
    "runtimeExecutable": "/home/likp/.nvm/versions/node/v24.11.1/bin/node",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/index.ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: build",
      "smartStep": true,
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
        "type": "node",
        "request": "attach",
        "name": "Attach to Remote Node",
        "port": 9229,
        "address": "localhost",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "${workspaceFolder}",
        "skipFiles": [
            "<node_internals>/**"
        ]
    }
  ]
}
